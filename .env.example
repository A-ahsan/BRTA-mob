# BRTA Mobile Application Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
APP_NAME="BRTA Mobile Application"
APP_VERSION=2.0

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for API endpoints (change for production)
API_BASE_URL=http://192.168.0.106/brta_mob/api

# Alternative local development URL
# API_BASE_URL=http://localhost/brta_mob/api

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=brta_mob

# Database connection charset
DATABASE_CHARSET=utf8mb4

# ===========================================
# SSL COMMERCE PAYMENT GATEWAY
# ===========================================
# SSL Commerce Sandbox/Live Configuration
SSL_COMMERCE_STORE_ID=your_store_id_here
SSL_COMMERCE_STORE_PASSWORD=your_store_password_here

# SSL Commerce URLs (Sandbox)
SSL_COMMERCE_SANDBOX_URL=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSL_COMMERCE_VALIDATION_URL=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php

# SSL Commerce URLs (Live - uncomment for production)
# SSL_COMMERCE_LIVE_URL=https://securepay.sslcommerz.com/gwprocess/v4/api.php
# SSL_COMMERCE_VALIDATION_URL=https://securepay.sslcommerz.com/validator/api/validationserverAPI.php

# Payment success/fail/cancel URLs
PAYMENT_SUCCESS_URL=http://192.168.0.106/brta_mob/gateway/sslcommerce_success.php
PAYMENT_FAIL_URL=http://192.168.0.106/brta_mob/gateway/sslcommerce_fail.php
PAYMENT_CANCEL_URL=http://192.168.0.106/brta_mob/gateway/sslcommerce_cancel.php

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret for token generation (generate a secure random string)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Session configuration
SESSION_TIMEOUT=3600

# Password hashing salt rounds
BCRYPT_ROUNDS=12

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types for NID and photo uploads
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Upload directories
UPLOAD_DIR=uploads
NID_UPLOAD_DIR=uploads/nid
SELFIE_UPLOAD_DIR=uploads/selfies

# ===========================================
# FACE VERIFICATION SETTINGS
# ===========================================
# Face-API.js model settings
FACE_MODEL_URL=/models
FACE_MATCH_THRESHOLD=0.6
FACE_EAR_THRESHOLD=0.25
FACE_REQUIRED_BLINKS=2
FACE_TURN_FRACTION=0.15

# ===========================================
# EMAIL CONFIGURATION (if needed)
# ===========================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@brta.gov.bd
SMTP_FROM_NAME="BRTA Digital Services"

# ===========================================
# LOGGING AND DEBUGGING
# ===========================================
# Enable/disable logging
ENABLE_LOGGING=true
LOG_LEVEL=info

# Enable debug mode (disable in production)
DEBUG_MODE=true

# Error reporting level
ERROR_REPORTING=E_ALL

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Server IP address (change based on your network)
SERVER_IP=192.168.0.106

# Server port (if different from default)
SERVER_PORT=80

# CORS settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ===========================================
# ADDITIONAL SETTINGS
# ===========================================
# Timezone
TIMEZONE=Asia/Dhaka

# Language settings
DEFAULT_LANGUAGE=bn
SUPPORTED_LANGUAGES=bn,en

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=900

# ===========================================
# PRODUCTION SPECIFIC SETTINGS
# ===========================================
# Uncomment and configure for production deployment

# PRODUCTION_DB_HOST=your_production_db_host
# PRODUCTION_DB_USER=your_production_db_user
# PRODUCTION_DB_PASSWORD=your_production_db_password

# SSL Certificate paths (for HTTPS)
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# SSL_KEY_PATH=/path/to/ssl/private.key

# Content Delivery Network (CDN) URLs
# CDN_URL=https://cdn.yourdomain.com
# ASSETS_URL=https://assets.yourdomain.com
